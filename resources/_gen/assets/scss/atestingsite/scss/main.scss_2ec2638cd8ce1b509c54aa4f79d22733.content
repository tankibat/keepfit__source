body{font-family:"Commissioner", sans-serif;font:"Commissioner", sans-serif}.app-container{padding:50px}.search input{padding:10px;font-family:"Commissioner", sans-serif;border-radius:0;border:1px solid #e40a0a;width:200px}.search input:focus{outline:1px solid #b30202}.search button{padding:10px;margin-left:10px;background-color:#e40a0a;color:white;border:0;cursor:pointer;font-family:"Commissioner", sans-serif}.search button:hover,.search button:disabled{background-color:#b30202}.search__errors{margin-top:10px;color:#e40a0a}.videos{display:flex;flex-wrap:wrap}.videos__item{width:250px;margin:15px;margin-bottom:15px;margin-left:45px;transition:transform 0.3s ease;box-shadow:0 0 16px 4px rgba(11,135,139,0.2)}.videos__item:hover{transform:scale(1.02) rotate(0deg)}.videos__item:nth-child(odd):hover{transform:scale(1.02) rotate(0deg)}.video__image a{display:block;width:100%;height:100%}.video__image img{width:100%;height:100%}.video__footer{display:flex;align-items:center;font-size:12px;padding:10px;height:50px}.video__footer p{margin:0;font-weight:800}
